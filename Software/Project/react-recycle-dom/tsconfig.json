{
	"compilerOptions": {
		"jsx": "react",
		"target": "es5",
		"lib": [
			"es6",
			"dom",
			"es2017"
		],
		"module": "commonjs",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": false,
		"allowJs": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}